<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">
    <TextView
        android:id="@+id/tv_firstName_edit"
        android:layout_width="105dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="@string/tv_firstName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_selectAvatar_edit" />

    <TextView
        android:id="@+id/tv_lastName_edit"
        android:layout_width="103dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/tv_lastName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_firstName_edit" />

    <EditText
        android:id="@+id/et_lastName_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/et_lastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_lastName_edit"
        app:layout_constraintTop_toBottomOf="@+id/et_firstName_edit" />

    <RadioGroup
        android:id="@+id/radioGroup_edit"
        android:layout_width="288dp"
        android:layout_height="33dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_lastName_edit">

        <RadioButton
            android:id="@+id/rb_male_edit"
            android:layout_width="149dp"
            android:layout_height="match_parent"
            android:text="@string/rb_male" />

        <RadioButton
            android:id="@+id/rb_female_edit"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:text="@string/rb_female" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_editProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/btn_updateProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_newUser_password_edit" />

    <TextView
        android:id="@+id/tv_newUser_email_edit"
        android:layout_width="91dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:text="@string/tv_newUser_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_edit" />

    <EditText
        android:id="@+id/et_newUser_email_edit"
        android:layout_width="211dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/et_newUser_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_newUser_email_edit"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup_edit" />

    <TextView
        android:id="@+id/tv_newUser_password_edit"
        android:layout_width="99dp"
        android:layout_height="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="76dp"
        android:text="@string/tv_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_newUser_email_edit" />

    <EditText
        android:id="@+id/et_newUser_password_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="44dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_newUser_password_edit"
        app:layout_constraintTop_toBottomOf="@+id/et_newUser_email_edit" />

    <ImageView
        android:id="@+id/iv_selectAvatar_edit"
        android:layout_width="142dp"
        android:layout_height="125dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/camera" />

    <EditText
        android:id="@+id/et_firstName_edit"
        android:layout_width="215dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/et_firstName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_firstName_edit"
        app:layout_constraintTop_toBottomOf="@+id/iv_selectAvatar_edit" />
</androidx.constraintlayout.widget.ConstraintLayout>