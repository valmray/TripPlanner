<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoverPhotoLibrary">

    <ImageView
        android:id="@+id/iv_alaska"
        android:layout_width="197dp"
        android:layout_height="121dp"

        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alaska" />

    <ImageView
        android:id="@+id/iv_borabora"
        android:layout_width="168dp"
        android:layout_height="100dp"

        android:layout_marginTop="64dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_grandCanyon"
        app:srcCompat="@drawable/borabora" />

    <ImageView
        android:id="@+id/iv_cappadocia"
        android:layout_width="167dp"
        android:layout_height="110dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="24dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/iv_borabora"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_calvin"
        app:srcCompat="@drawable/cappadocia" />

    <ImageView
        android:id="@+id/iv_calvin"
        android:layout_width="160dp"
        android:layout_height="110dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_snowBoard"
        app:srcCompat="@drawable/cavin" />

    <ImageView
        android:id="@+id/iv_colombia"
        android:layout_width="160dp"
        android:layout_height="100dp"

        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_alaska"
        app:srcCompat="@drawable/colombia" />

    <ImageView
        android:id="@+id/iv_grandCanyon"
        android:layout_width="160dp"
        android:layout_height="100dp"

        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toEndOf="@+id/iv_calvin"
        app:layout_constraintTop_toBottomOf="@+id/iv_colombia"
        app:srcCompat="@drawable/grandcanyonofthecoloradoar" />

    <ImageView
        android:id="@+id/iv_snowBoard"
        android:layout_width="161dp"
        android:layout_height="100dp"

        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_colombia"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_alaska"
        app:srcCompat="@drawable/snowboard" />

</androidx.constraintlayout.widget.ConstraintLayout>