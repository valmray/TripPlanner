<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoverPhotoLibrary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        android:orientation="vertical"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/iv_alaska"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="73dp"
            app:srcCompat="@drawable/alaska" />

        <ImageView
            android:id="@+id/iv_borabora"
            android:layout_width="198dp"
            android:layout_height="119dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="213dp"
            android:layout_marginEnd="8dp"
            app:srcCompat="@drawable/borabora" />

        <ImageView
            android:id="@+id/iv_cappadocia"
            android:layout_width="197dp"
            android:layout_height="127dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-4dp"
            android:layout_marginTop="211dp"
            android:textAlignment="center"
            app:srcCompat="@drawable/cappadocia" />

        <ImageView
            android:id="@+id/iv_calvin"
            android:layout_width="191dp"
            android:layout_height="131dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="393dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cavin" />

        <ImageView
            android:id="@+id/iv_colombia"
            android:layout_width="190dp"
            android:layout_height="112dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="28dp"
            app:srcCompat="@drawable/colombia" />

        <ImageView
            android:id="@+id/iv_grandCanyon"
            android:layout_width="191dp"
            android:layout_height="131dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="18dp"
            app:srcCompat="@drawable/grandcanyonofthecoloradoar" />

        <ImageView
            android:id="@+id/iv_snowBoard"
            android:layout_width="191dp"
            android:layout_height="131dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="392dp"
            app:srcCompat="@drawable/snowboard" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>